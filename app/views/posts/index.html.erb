<div class="mb-1 mt-9 max-w-5xl mx-auto bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
<%= form_with model: @post do |form| %>
  <div class="flex items-center space-x-4">
    <img src="#" alt="Profile" class="text-white w-12 h-12 rounded-full">
    <%= form.text_area :body,placeholder: "Write something...", class: "text-white flex-1 border-b border-gray-200 dark:border-gray-700 focus:outline-none focus:border-blue-500 p-2 rounded-md dark:bg-gray-700" %>
  </div>
  <div class="flex justify-end mt-4">
    <%= form.file_field :photo, class: "hidden", id: "photo-upload", accept: "image/*" %>
    <label for="photo-upload" class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:outline-none mr-2 dark:bg-gray-700 cursor-pointer">Add Photo</label>
    <%= form.submit "Post", class: "px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:outline-none dark:bg-gray-700"%>
  </div>
<% end %>
</div>  
<br>

<% @posts.each do |post| %>
  <div class="mt-5 max-w-5xl mx-auto bg-white dark:bg-gray-800 shadow-md rounded-md overflow-hidden text-white">
  <div class="p-4">
    <div class="flex items-center space-x-4">
      <img src="#" alt="Profile" class="w-10 h-10 rounded-full text-white">
      <div>
        <p class="font-semibold"> <%= "#{post.user.first_name.capitalize} #{post.user.last_name.capitalize}" %></p>
        <p class="text-blue-500 text-sm">Posted on <%= post.updated_at.strftime("%B %d, %Y") %></p>
      </div>
    </div>
    <% if post.photo.attached? %>
    <div class="mt-4 px-5 py-5 flex justify-center border border-gray-300  rounded-md items-center">
        <div class="max-w-80 max-h-80 mr-4 border border-blue-300 rounded-md overflow-hidden">
          <%= image_tag(post.photo, class: "object-cover max-w-full max-h-full") %>
        </div>
        </div>
      <% end %>
      <div class="mt-4 px-1" >
       <p><%= post.body %></p>
      </div>
  </div>
  <div class="bg-gray-100 dark:bg-gray-700 px-4 py-2 flex justify-between items-center">
    <div class="flex items-center space-x-2">
    <img src="like-icon.svg" alt="Like Icon" class="w-5 h-5">
    <button class="text-blue-500 dark:text-blue-400 hover:text-blue-600 dark:hover:text-blue-300 focus:outline-none">Like</button>
    </div>
    <div class="flex items-center space-x-2">
    <img src="comment-icon.svg" alt="Comment Icon" class="w-5 h-5">
    <button id="commentButton" class="text-gray-500 dark:text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 focus:outline-none">Comment</button>
    </div>
  </div>
</div>  
<% end %>