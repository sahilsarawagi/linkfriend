<div class="w-full min-h-screen flex flex-col justify-center items-center bg-white  text-white dark:bg-gray-800">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class:"w-full flex max-w-3xl my-5 px-11 justify-center bg-white dark:bg-gray-900 rounded-lg py-1" }) do |f| %>
        <div class="p-2 md:p-4">
                <div class="w-full px-6 pb-8 mt-8 sm:max-w-xl sm:rounded-lg">
                    <h2 class="pl-6 text-2xl font-bold text-white sm:text-xl">Public Profile</h2>

                    <div class="grid max-w-2xl mx-auto mt-8">
                        <div class="flex flex-col items-center space-y-5 sm:flex-row sm:space-y-0">

                            <img class="object-cover w-40 h-40 p-1 rounded-full ring-2 ring-indigo-300 dark:ring-indigo-500"
                                src="https://www.shutterstock.com/image-photo/random-pic-craneheron-village-outdoor-260nw-1742166515.jpg"
                                alt="Bordered avatar">

                            <div class="flex flex-col space-y-5 sm:ml-8">
                                <button type="button"
                                    class="py-3.5 px-7 text-base font-medium  bg-blue-500 hover:bg-blue-600 dark:bg-gray-700 focus:outline-none text-white  rounded-lg  ">
                                    Change picture
                                </button>
                                <button type="button"
                                    class="py-3.5 px-7 text-base font-medium text-black focus:outline-none bg-white rounded-lg hover:bg-red-600  ">
                                    Delete picture
                                </button>
                            </div>
                        </div>
                        <div class="items-center mt-8 sm:mt-14 text-white">
                          <div class="flex flex-col items-center w-full mb-2 space-x-0 space-y-2 sm:flex-row sm:space-x-4 sm:space-y-0 sm:mb-6">
                                <div class="w-full">
                                      <%= f.label :first_name,"Your first name", class:"block mb-2 text-sm font-medium text-indigo-900 dark:text-white" %>
                                      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",class:"text-white border border-gray-200 dark:border-gray-700 dark:bg-gray-700 text-sm rounded-lg focus:outline-none focus:border-blue-500 block w-full p-2.5",
                                        placeholder:"Your first name" %>   
                                </div>

                                <div class="w-full">
                                      <%= f.label :last_name,"Your last name", class:"block mb-2 text-sm font-medium text-indigo-900 dark:text-white" %>
                                      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name",class:"text-white border border-gray-200 dark:border-gray-700 dark:bg-gray-700 text-sm rounded-lg focus:outline-none focus:border-blue-500 block w-full p-2.5",
                                        placeholder:"Your last name" %> 
                                </div>

                          </div>
                          <div class="mb-2 sm:mb-6">
                                    <%= f.label :email,"Your email",class:"block mb-2 text-sm font-medium text-indigo-900 dark:text-white" %>
                                    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"text-white border border-gray-200 dark:border-gray-700 dark:bg-gray-700 text-sm rounded-lg focus:outline-none focus:border-blue-500 block w-full p-2.5",
                                    placeholder:"your.email@mail.com" %>
                            </div>

                            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                            <% end %>

                            <div class="mb-2 sm:mb-6">
                                <%= f.label :password, class:"mb-2 text-sm font-medium dark:text-white"  %> <i>(leave blank if you don't want to change it)</i>
                                <%= f.password_field :password, autocomplete: "new-password",class:"mt-2 text-white border border-gray-200 dark:border-gray-700 dark:bg-gray-700 text-sm rounded-lg focus:outline-none focus:border-blue-500 block w-full p-2.5 ",
                                    placeholder:"••••••••"  %>
                            </div>
                            <div class="mb-2 sm:mb-6">
                                <%= f.label :password_confirmation,"Confirm Password", class:"block mb-2 text-sm font-medium text-indigo-900 dark:text-white" %>
                                <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"text-white border border-gray-200 dark:border-gray-700 dark:bg-gray-700 text-sm rounded-lg focus:outline-none focus:border-blue-500 block w-full p-2.5 ",
                                placeholder:"••••••••" %>
                            </div>
                            <div class="mb-2 sm:mb-6">
                                <%= f.label :current_password,class:"mb-2 text-sm font-medium text-indigo-900 dark:text-white" %> <i>(we need your current password to confirm your changes)</i>
                                <%= f.password_field :current_password, autocomplete: "current-password", class:"mt-2 text-white border border-gray-200 dark:border-gray-700 dark:bg-gray-700 text-sm rounded-lg focus:outline-none focus:border-blue-500 block w-full p-2.5 ",
                                placeholder:"••••••••" %>
                            </div>
                            <div class="flex justify-end">    
                                <%= f.submit "Update", class:"text-white bg-indigo-700  hover:bg-indigo-800 focus:ring-4 focus:outline-none focus:ring-indigo-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-indigo-600 dark:hover:bg-indigo-700 dark:focus:ring-indigo-800" %>
                            </div>
                            <div class="mt-2 text-red-600 sm:mb-6 ">
                              <i><%= render "devise/shared/error_messages", resource: resource %></i>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    
    <% end %>

    <div class="w-full my-3 max-w-3xl  py-5 px-11 justify-center bg-white dark:bg-gray-900 rounded-lg">

        <h3 class="text-lg font-semibold mb-3">Cancel my account</h3>
        <p class="text-gray-600 dark:text-gray-300 mb-4">Are you sure you want to cancel your account?</p>
        <div class="flex">
             <%= button_to "Delete Account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class:"text-white  bg-red-700  hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-indigo-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800" %>
        </div>

    </div>
</div>
