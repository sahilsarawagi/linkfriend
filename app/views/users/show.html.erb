<div class="w-full min-h-screen flex flex-col  items-center bg-white  text-white dark:bg-gray-800">
<div class="w-full max-w-5xl my-10  justify-center bg-white dark:bg-gray-900 rounded-lg">
   <div class=" rounded-l">
    <div class="rounded-t-lg h-32 overflow-hidden">
        <img class="object-center w-full" src='https://images.unsplash.com/photo-1431440869543-efaf3388c585?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D' alt='Mountain'>
    </div>
    <div class="mx-auto w-32 h-32 relative -mt-16 border-4 border-indigo-500 rounded-full overflow-hidden">
        <%= image_tag(user_profile_photo(@user), class: "object-cover object-center h-32") %>  
    </div>
    <div class="text-center mt-2">
        <h2 class="font-semibold"><%= user_name(@user) %></h2>
        <p class="text-gray-500"><%= user_email(@user) %></p>
    </div>

    <div class="mt-5 mb-3 flex justify-center gap-4 md:!gap-14">
       <div class="flex flex-col items-center justify-center">
         <h3 class="text-bluePrimary text-xl font-bold"><%= @user.posts.count%></h3>
         <p class="text-gray-500 text-sm font-normal">Posts</p>
       </div>
       <div class="flex flex-col items-center justify-center">
         <h3 class="text-bluePrimary text-xl font-bold"><%= @user_followers_count%></h3>
         <p class="text-gray-500 text-sm font-normal"><%= link_to "Followers", followers_user_path(@user)%></p>
       </div>
       <div class="flex flex-col items-center justify-center">
         <h3 class="text-bluePrimary text-xl font-bold"><%= @user_followings_count%></h3>
         <p class="text-gray-500 text-sm font-normal"><%= link_to "Following", followings_user_path(@user)%></p>
       </div>
   </div>
    <div class="md:flex sm:flex-row p-4 border-t mt-2">
        <%= button_to follow_unfollow_button(@user, @requested_pending_status)[:label],follow_unfollow_button(@user, @requested_pending_status)[:path], method: follow_unfollow_button(@user, @requested_pending_status)[:method]  ,form_class:"w-full mx-auto px-6 py-2",class:"w-full rounded-full bg-blue-900 hover:shadow-lg font-semibold text-white px-6 py-2"%>
        <%if @pending_request_status %>
        <%= button_to "Accept Request",accept_request_path(@user), method: :post  ,form_class:"w-full mx-auto px-6 py-2",class:"w-full rounded-full bg-blue-900 hover:shadow-lg font-semibold text-white px-6 py-2"%>
        <%= button_to "Cancel Request",cancel_request_path(@user), method: :post  ,form_class:"w-full mx-auto px-6 py-2",class:"w-full rounded-full bg-blue-900 hover:shadow-lg font-semibold text-white px-6 py-2"%>
        <%end%>
    <div>  
   </div>
</div>
<div class="w-full max-w-5xl p-2 md:p-4">
 <h2 class="text-2xl font-bold text-white sm:text-xl"> Recent Posts </h2>
  <%# TODO Add posts %>
</div>
</div>